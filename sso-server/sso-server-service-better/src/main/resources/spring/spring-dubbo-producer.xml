<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans.xsd 
	    http://code.alibabatech.com/schema/dubbo 
	    http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.hsy.sso.service.api"/>
    <context:component-scan base-package="com.hsy.sso.service.better.impl"/>

    <dubbo:application name="sso-service-better-dubbo-provider"/>
    <dubbo:registry address="zookeeper://192.168.216.129:2818"/>
    <dubbo:protocol name="dubbo" port="20881"/>
    <dubbo:monitor protocol="registry"/>

    <!--定义了提供方应用信息，用于计算依赖关系；在 dubbo-admin 或 dubbo-monitor 会显示这个名字，方便辨识-->
